h1 Games 

table class="table table-striped table-hover"
    thead 
        tr 
            th Team 1
            th Team 2
            th Team 1 Score
            th Team 2 Score
            th Team 1 Game Points
            th Team 2 Game Points
            th
    tbody 
        - @games.each do |game|
            tr
                td = game.team_1.team_name
                td = game.team_2.team_name
                td = game.team_1_score
                td = game.team_2_score
                td = game.team_1_points
                td = game.team_2_points
                td = link_to "Destroy", game, data: {confirm: "Are you sure?"}, method: :delete

= link_to 'Add a new game', new_game_path(@team)
